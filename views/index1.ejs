  <h1>Hello World</h1>
</div>
<div class="box">
  <% for(let item of listItems) { %>
  <form action="/delete/<%= list._id %>" method="POST">
    <div class="item">
      <input
        type="checkbox"
        name="item"
        value="<%= item._id %>"
        onChange="this.form.submit()"
      />
      <p>test</p>
    </div>
  </form>
  <% } %>
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="">+</button>
  </form>
</div>
